{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "Build",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "command": "make all",
        "problemMatcher": "$gcc"
      },
      {
        "type": "shell",
        "label": "Clean",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "command": "rm -rf build"
      }
    ]
  }